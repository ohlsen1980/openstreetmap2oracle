<Window x:Class="OpenStreetMap2Oracle.gui.DbLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Oracle Login" Height="180" Width="300">
    <Canvas>
        <Label Canvas.Left="10" Canvas.Top="10">Nutzername:</Label>
        <TextBox x:Name="UserTxtBox" Width="120" Height="25" Canvas.Left="120" Canvas.Top="10"></TextBox>
        <Label Canvas.Left="10" Canvas.Top="40">Passwort:</Label>
        <PasswordBox x:Name="PassTxtBox" Width="120" Height="25" Canvas.Left="120" Canvas.Top="40"></PasswordBox>
        <Label Canvas.Left="10" Canvas.Top="70">Service:</Label>
        <TextBox x:Name="ServTxtBox" Width="120" Height="25" Canvas.Left="120" Canvas.Top="70"></TextBox>
        <Button x:Name="OKBtn" Width="70" Height="25" Canvas.Left="50" Canvas.Top="100" Click="OKBtn_Click">OK</Button>
        <Button x:Name="AbbrBtn" Width="70" Height="25" Canvas.Left="140" Canvas.Top="100" Click="AbbrBtn_Click">Abbrechen</Button>
    </Canvas>
</Window>
