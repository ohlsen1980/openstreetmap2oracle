<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:OpenStreetMap2Oracle" mc:Ignorable="d"
	x:Class="OpenStreetMap2Oracle.MainWindow2"
	x:Name="Window"
	Title="OpenStreetMap to Oracle"
	Width="814" Height="595" ResizeMode="NoResize">

	<Grid x:Name="LayoutRoot">
		<Grid.Background>
			<RadialGradientBrush RadiusY="0.632" RadiusX="0.692" GradientOrigin="0.099,-0.085" Center="0.465,0.456">
				<GradientStop Color="White" Offset="0.728"/>
				<GradientStop Color="#FFCAA703" Offset="0.996"/>
			</RadialGradientBrush>
		</Grid.Background>
		<Label Content="General Purpose Licence" HorizontalAlignment="Right" Height="27" Margin="0,0,8,8" VerticalAlignment="Bottom" Width="143" FontStyle="Italic">
			<Label.Effect>
				<DropShadowEffect BlurRadius="9" ShadowDepth="0" Opacity="0.555"/>
			</Label.Effect>
		</Label>
		<Grid HorizontalAlignment="Left" Margin="8,8,0,0" Width="297" Height="120" VerticalAlignment="Top">
			<Label Content="OpenStreetMap" Height="34" Margin="23,20,107,0" VerticalAlignment="Top" FontSize="18.667" FontWeight="Bold"/>
			<Label Content="to" HorizontalAlignment="Left" Margin="100,42.44,0,51.56" Width="23" FontSize="13.333" FontWeight="Bold" Background="#00898989" Foreground="#FF858585"/>
			<Label Content="Oracle" Margin="117,41,120,43" FontSize="14.667" FontWeight="Bold" Foreground="#FF8D0E0E"/>
		</Grid>
		<local:HugeButton x:Name="btnCreateConnection" Margin="184,128,160,0" VerticalAlignment="Top" Header="Create Database Connection" ImageSource="assets/Image1.png" BodyContent="Set up your connection parameters here." MouseUp="btnCreateDBConnection"/>
		<local:HugeButton x:Name="btnSelectFile" Margin="184,233,160,244" Header="Select OSM File" ImageSource="Image1.png" BodyContent="Select the OSM file you want to migrate to your Oracle database." d:LayoutOverrides="Height" MouseUp="btnSelectFile_MouseUp" Disabled="True"/>
		<local:HugeButton x:Name="btnStartMigration" Margin="184,0,160,136.666" Header="Start Migration" ImageSource="Image2.png" BodyContent="Starts the migration process. This may take a while." VerticalAlignment="Bottom" MouseUp="btnStartMigration_MouseUp" Disabled="True"/>
    </Grid>
</Window>